font-url = 'https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap'
background-color = #F5F5F7
primary-color = #705C53
secondary-color = #EDDFE0
text-color = #333
muted-color = #777

@import font-url

* 
  margin: 0
  padding: 0
  box-sizing: border-box

body 
  font-family: 'Fredoka', sans-serif
  background-color: background-color
  font-size: 18px

section 
  margin-bottom: 2rem

.top-bar 
  position: fixed
  top: 0
  left: 0
  width: 100%
  background-color: primary-color
  display: flex
  justify-content: space-between
  align-items: center
  padding: 10px 20px
  color: white
  z-index: 1000

.logo img 
  height: 40px
  width: auto
  border-radius: 1rem

.register-button-top 
  width: 8rem
  height: 2.5rem
  opacity: 0.7
  cursor: pointer
  border-radius: 1rem
  border: none
  transition: 1s

.register-button-top:hover 
  opacity: 1
  transition: 1s

.register-button 
  border: none
  border-radius: 1rem
  opacity: 0.8
  cursor: pointer
  color: primary-color
  transition: 0.5s
  margin-top: 1em
  width: 14rem
  height: 3rem
  background-color: secondary-color
  font-size: 1.1em

.register-button:hover 
  opacity: 1
  transition: 0.5s
  background-color: primary-color
  color: secondary-color

.page-layout 
  display: flex
  justify-content: space-between
  margin-top: 0.1rem
  padding: 0 20px
  margin-top: 80px

.intro 
  display: flex
  flex-direction: row
  gap: 20px

.description 
  flex: 1
  flex-direction: column
  display: flex
  justify-content: space-between

.description p 
  margin: 20px 0
  font-size: 1.5rem
  color: primary-color

h1 
  font-size: 5rem
  color: text-color

h2 
  color: text-color

.intro img 
  flex: 1
  width: 100%
  object-fit: cover
  max-width: 45rem
  box-shadow: 0 2px 4px 2px text-color

.catalog 
  background-image: linear-gradient(to left, rgba(0, 0, 0, 0.5), rgba(140, 140, 140, 0.3), rgba(0, 0, 0, 0.5)), url(images/step_page/catalog_img.jpg)
  background-size: cover
  padding: 2rem 6rem
  display: flex
  flex-direction: column
  align-items: center
  gap: 1rem
  box-shadow: 0 3px 3px 5px primary-color

.catalog div 
  display: flex
  flex-direction: row
  justify-content: space-between
  gap: 3rem

.catalog div article 
  width: 20rem
  background-color: rgba(237, 223, 224, 0.73)
  border-radius: 1rem
  padding: 1rem 2rem

.catalog div article p 
  margin: 1rem 0
  color: primary-color

.tutorial 
  display: flex
  align-items: center
  flex-direction: column
  justify-content: space-between

.tutorial-grid 
  display: grid
  grid-template-columns: repeat(3, 1fr) 
  gap: 3rem 
  padding: 2rem 6rem 0 

.step 
  display: flex
  align-items: center 
  border: 1px solid #ccc
  border-radius: 10px
  padding: 20px
  margin-bottom: 20px
  background-color: #f9f9f9
  position: relative
  overflow: hidden
  max-width: 800px

.step-number 
  background-color: primary-color
  color: background-color
  font-size: 4rem
  font-weight: bold
  display: flex
  align-items: center
  justify-content: center
  width: 80px 
  height: 100% 
  position: absolute
  left: 0 
  top: 0

.step-content 
  padding-left: 100px 

.step-content h3 
  margin-bottom: 10px
  font-size: 1.5rem
  color: text-color

.step-content p 
  font-size: 1rem
  color: muted-color
  line-height: 1.5

.footer 
  background-color: primary-color
  color: white
  padding: 40px
  display: flex
  justify-content: space-between
  align-items: flex-start
  flex-wrap: wrap
  margin-top: 50px

.footer-content 
  display: flex
  flex-wrap: wrap
  width: 100%
  justify-content: space-between
  align-items: flex-start

.footer-logo img 
  height: 3rem
  border-radius: 1rem

.footer-links 
  display: flex
  justify-content: center
  gap: 50px
  flex: 1

.footer-column h3 
  margin-bottom: 10px
  color: secondary-color

.footer-column ul 
  list-style-type: none
  padding: 0

.footer-column ul li 
  margin-bottom: 8px

.footer-column ul li a 
  text-decoration: none
  color: secondary-color

.footer-column ul li a:hover 
  text-shadow: 2px 2px 2px text-color

@media (max-width: 1024px) 
  .page-layout 
    flex-direction: column
    padding: 0 10px

  .intro 
    flex-direction: column
    gap: 1rem

  .intro img 
    max-width: 100%
    height: auto

  .catalog div 
    flex-direction: column
    align-items: center

  .catalog div article 
    width: 100%
    max-width: 400px

  .tutorial-grid 
    grid-template-columns: repeat(2, 1fr)
    padding: 2rem 2rem 0
    gap: 2rem

  .step 
    max-width: 100%

@media (max-width: 768px) 
  .top-bar 
    flex-direction: column
    padding: 20px

  .logo img 
    height: 30px

  .register-button-top 
    width: 100%
    margin-top: 10px

  .page-layout 
    margin-top: 150px

  .intro h1 
    font-size: 3rem

  .tutorial h1 
    font-size: 3rem

  .description p 
    font-size: 1.2rem

  .catalog 
    padding: 1rem 2rem

  .catalog div article 
    max-width: 100%

  .tutorial-grid 
    grid-template-columns: 1fr
    padding: 2rem 0 0

  .footer 
    flex-direction: column
    align-items: center
    text-align: center

  .footer-content 
    flex-direction: column
    align-items: center
    gap: 2rem

  .footer-logo img 
    height: 50px

  .footer-links 
    flex-direction: column
    gap: 1rem

  .footer-column 
    margin-bottom: 1rem

  .footer-column ul li 
    margin-bottom: 5px

  .register-button, .register-button-top 
    width: 100%
    font-size: 1.2rem
    padding: 0.8rem 0
